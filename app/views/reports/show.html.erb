<div class="report" style="font-size: 16px;">
  <img src=/assets/surana_head.png alt="Surana Header" style="width:100%;" class="company_logo" itemprop="logo">
  <div class="container">
    <div class="text-center"><b style="text-decoration: underline;">Quotation</b><b>: <%= @data['quotation'] %></b><span style="float: right;">Date: <%= Time.now.strftime("%D") %></span></div>
    <% if @data['details'] && @data['details'].length > 0 %>
      <h4>
        To,
      </h4>
      <% @data['details'].each do |x| %>
        <h5 style="margin: 2px 0; font-size: 16px;">
          <%= x %>
        </h5>
      <% end %>
    <% end %>
    <br>
    <div>Dear Sir,</div>
    <div style="margin-left:30px">We are pleased to quote as below:</div>
    <br>
    <% if @data['items'] && @data['items'].length > 0 %>
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th style="text-align:center;text-decoration:underline;">S.No</th>
            <th style="text-align:center;text-decoration:underline;width: 50%;" id="item">Item Description</th>
            <th style="text-align:center;text-decoration:underline;">Make</th>
            <th style="text-align:center;text-decoration:underline;">Quantity</th>
            <th style="text-align:center;text-decoration:underline;">Unit Price</th>
            <th style="text-align:center;text-decoration:underline;">Total</th>
          </tr>
        </thead>
        <tbody>
          <% grand_total = 0 %>
          <% total = 0 %>
          <% @data['items'].each_with_index do |k,v| %>
            <% total = k['quantity'].to_i*k['unit_price'].to_i %>
            <% grand_total = grand_total + total %>
            <tr>
              <td class="text-center"><%= v.to_i + 1 %> )</td>
              <td><%= k['comment'] %></td>
              <td class="text-center"><%= k['make'] %></td>
              <td class="text-center"><%= k['quantity'] %></td>
              <td class="text-center"><%= k['unit_price'] %></td>
              <td class="text-center"><%= total %></td>
            </tr>
          <% end %>
          <tr>
            <td class="text-right" colspan="5"><b>Grand Total</b></td>
            <td class="text-center"><b><%= grand_total %></b></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    <br>
    <br>
    <div><b style="text-decoration: underline;">Terms and Conditions</b><b>:</b></div>
    <ol style="padding-left: 20px;">
      <li style="list-style-type: disc;"><b>Prices:-</b> <%= @data['terms']['price'] %></li>
      <li style="list-style-type: disc;"><b>Taxes:-</b> <%= @data['terms']['tax'] %></li>
      <li style="list-style-type: disc;"><b>Delivery:-</b> <%= @data['terms']['delivery'] %></li>
      <li style="list-style-type: disc;"><b>Validity:-</b> <%= @data['terms']['validity'] %></li>
      <li style="list-style-type: disc;"><b>Payment:-</b> <%= @data['terms']['payment'] %></li>
    </ol>
    <div class="text-right">Yours Faithfully,</div>
    <div class="text-right">Gaurav Surana</div>
  </div>
</div>