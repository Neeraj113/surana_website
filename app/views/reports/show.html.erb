<div class="report">
  <img src=/assets/surana_head.png alt="Surana Header" style="width:100%;" class="company_logo" itemprop="logo">
  <div class="container">
    <% if params['details'] && params['details'].length > 0 %>
      <h4>
        To,
      </h4>
      <% params['details'].each do |x| %>
        <h4>
          <%= x %>
        </h4>
      <% end %>
    <% end %>
    <div>Dear Sir,</div>
    <div style="margin-left:30px">We are pleased to quote as below:</div>
    <% if params['items'] && params['items'].length > 0 %>
      <table class="table table-bordered">
        <!-- <caption>Items Quotation</caption> -->
        <thead>
          <tr>
            <th style="text-align:center;text-decoration:underline;width: 50%;">Item Description</th>
            <th style="text-align:center;text-decoration:underline;">Quantity</th>
            <th style="text-align:center;text-decoration:underline;">Unit Measurement</th>
            <th style="text-align:center;text-decoration:underline;">Unit Price</th>
            <th style="text-align:center;text-decoration:underline;">Total</th>
          </tr>
        </thead>
        <tbody>
          <% params['items'].each do |k,v| %>
            <tr>
              <td><%= v['comment'] %></td>
              <td><%= v['quantity'] %></td>
              <td><%= v['unit_measurement'] %></td>
              <td><%= v['unit_price'] %></td>
              <td><%= v['quantity'].to_i*v['unit_price'].to_i %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <% if params['terms'] && params['terms'].length > 0 %>
      <div>
        Terms & Conditions:
      </div>
      <ul>
        <% params['terms'].each do |x| %>
          <li><%= x %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>